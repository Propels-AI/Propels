{
  "manifest_version": 3,
  "name": "Propels Demo Capturer",
  "version": "1.0.0",
  "description": "Capture your screen and create interactive product demos",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "notifications"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Demo Builder"
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*", "https://*.propels.ai/*"]
  }
}
