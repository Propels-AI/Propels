{
  "manifest_version": 3,
  "name": "Propels Demo Capturer",
  "version": "1.0.0",
  "description": "Capture your screen and create interactive product demos",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Demo Builder",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*", "https://app.propels.ai/*"],
    "accepts_tls_channel_id": false
  }
}
